<Window x:Class="BigBlue.SecondaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secondary Window" Height="300" Width="300" WindowStyle="None" ResizeMode="NoResize" Background="Black" AllowsTransparency="False" UseLayoutRounding="True" SizeToContent="WidthAndHeight">
    <Canvas x:Name="SecondaryWindowContainer">
        <Image Canvas.Top="0" Canvas.Left="0" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center" 
               Stretch="Uniform" x:Name="SecondaryWindowSnapshot" 
               RenderOptions.BitmapScalingMode="NearestNeighbor" 
               RenderOptions.EdgeMode="Aliased">
        </Image>
        <Rectangle x:Name="DamndBackground" RenderOptions.EdgeMode="Aliased" Visibility="Collapsed"></Rectangle>
        <Rectangle x:Name="Damnd" Canvas.Bottom="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" RenderOptions.BitmapScalingMode="Linear" RenderOptions.EdgeMode="Aliased" Visibility="Collapsed"></Rectangle>
        <Rectangle Canvas.Top="0" Canvas.Left="0" x:Name="SecondaryWindowStatic" HorizontalAlignment="Left" VerticalAlignment="Top" RenderOptions.BitmapScalingMode="Linear" RenderOptions.EdgeMode="Aliased" Visibility="Collapsed"></Rectangle>
    </Canvas>
</Window>
