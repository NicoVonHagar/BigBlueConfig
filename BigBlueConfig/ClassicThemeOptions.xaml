<Window x:Class="BigBlueConfig.ClassicThemeOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BigBlueConfig"
        mc:Ignorable="d"
        Title="Classic Theme Options" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" Background="#0F228B" ResizeMode="NoResize">
    <Grid Margin="30">
        <StackPanel>
            <Button x:Name="DisplayOptionsButton" Background="#FFCC00" Foreground="#0F228B" MinWidth="340" FontSize="30" FontFamily="Arial" Padding="4" Margin="0, 0, 0, 20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="DisplayOptionsButton_Click">Display Options</Button>
            <Button x:Name="GameListOptionsButton" Background="#FFCC00" Foreground="#0F228B" MinWidth="340" FontSize="30" FontFamily="Arial" Padding="4" Margin="0, 0, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="GameListOptionsButton_Click">List &amp; Menu Options</Button>
        </StackPanel>
    </Grid>
</Window>
